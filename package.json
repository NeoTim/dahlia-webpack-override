{
  "name": "dahlia-webpack-override",
  "description": "Override ",
  "scripts": {
    "build": "lerna run --parallel --stream build",
    "build:watch": "lerna run --parallel --stream build:watch",
    "format": "prettier --write \"packages/**/*/src/**/*.{js,ts,tsx}\"",
    "lint": "tslint -c tslint.json \"packages/**/*/src/**/*.{ts,tsx}\"",
    "lint:fix": "tslint -c tslint.json \"packages/**/*/src/**/*.{ts,tsx}\" --fix",
    "test": "lerna run --parallel --stream test",
    "test:watch": "lerna run --parallel --stream test:watch",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/.history/"
    ]
  },
  "lint-staged": {
    "{src,__tests__}/*.{js,ts,tsx}": [
      "npm run format",
      "npm run lint:fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "rules"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/forsigner/dahlia-webpack-override.git"
  },
  "author": "forsigner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/forsigner/dahlia-webpack-override/issues"
  },
  "homepage": "https://github.com/forsigner/dahlia-webpack-override#README",
  "devDependencies": {
    "@commitlint/cli": "^7.4.0",
    "@commitlint/config-conventional": "^7.3.1",
    "@types/fetch-mock": "^7.2.2",
    "@types/jest": "^23.3.13",
    "coveralls": "^3.0.2",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.1",
    "prettier": "^1.16.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.4"
  }
}
